<Window x:Class="ExpenseItDemo.ViewReport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExpenseItDemo"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="View Report" Height="500" Width="800">

    <StackPanel Margin="20, 0, 0, 0">
        <TextBlock Text="Expense Report" Style="{StaticResource ReportViewTitle}" />
        <TextBlock TextWrapping="Wrap" x:Name="EmployeeReport" />
    </StackPanel>
</Window>
